import { extendTheme } from "@chakra-ui/react";

const styles = {
  global: (props) => ({
    "html, body": {
      color: props.colorMode === "dark" ? "white" : "gray.800",
      lineHeight: "tall",

      animation: "gradientBG 30s ease infinite",
      backgroundSize: "400% 400%",
    },
  }),
};

const theme = extendTheme({ styles });

export default theme;
